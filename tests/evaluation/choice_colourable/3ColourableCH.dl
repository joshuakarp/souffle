// Verifies whether a derived node colouring (in node_colour) is a 3-colouring of the graph.
.decl colour(c:symbol)
.decl node(n:symbol)
.input node
.decl edge(x:symbol, y:symbol)
.input edge
.decl node_colour(node:symbol, colour:symbol) constrains node->colour
.decl cannot_colour()
.decl colourable()

//node("a").
